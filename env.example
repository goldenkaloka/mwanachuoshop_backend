# MwanachuoShop Environment Configuration
# Copy this file to .env and fill in your actual values

# Django Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True
FRONTEND_URL=http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mwanachuoshop

# Email Configuration (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS/Cloudflare R2 Storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET_NAME=mwanachuoshop-media
CLOUDFLARE_R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_CUSTOM_DOMAIN=your-custom-domain.r2.dev

# Cloudflare Stream
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_STREAM_API_TOKEN=your-stream-api-token

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Payment Configuration (Pesapal)
PESAPAL_DEMO=True
PESAPAL_CONSUMER_KEY=your-pesapal-consumer-key
PESAPAL_CONSUMER_SECRET=your-pesapal-consumer-secret
PESAPAL_NOTIFICATION_ID=your-notification-id
PESAPAL_CALLBACK_URL=https://your-domain.com/v3/payments/callback/pesapal/

# OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:8080,https://your-domain.com